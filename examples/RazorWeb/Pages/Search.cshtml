@page
@model RazorWeb.Pages.SearchModel
@{
    var searchTerm = Request.Query["searchTerm"];
    var filteredPosts = WebApp.Api.Posts.GetAllBySiteIdAsync().Result
        .Where(x => x.Title.Contains(searchTerm, StringComparison.OrdinalIgnoreCase));
}

<header class="has-image" style="background-image: url('~/assets/img/search.png">
    <div class="dimmer"></div>
    <div class="container text-center">
        <h1>Resultado Pesquisa</h1>
        <div class="row justify-content-center">
            <div class="col-lg-8 lead">
            </div>
        </div>
    </div>
</header>
<main class="archive">
    <div class="container">
        @foreach (var item in filteredPosts)
        {
            <div class="row">
                <article>
                    <header>
                        <h3>@item.Title</h3>
                        <p>@Html.Raw(item.Excerpt)</p>
                        <a href="@WebApp.Url(item)" class="btn btn-primary">Leia mais</a>
                    </header>
                </article>
            </div>
        }
    </div>
</main>